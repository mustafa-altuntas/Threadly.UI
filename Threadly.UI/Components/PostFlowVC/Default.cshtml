@using Threadly.UI.Models.ViewModels

@model List<PostViewModel>

    @foreach (var item in Model)
{
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="col-12 col-md-6 col-lg-11 mx-auto pt-4">

                    <div class="card-body pt-0">
                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item">
                                    <img src="~/mazer/dist/assets/images/samples/architecture1.jpg" class="d-block w-100" alt="Image Architecture">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/mazer/dist/assets/images/samples/bg-mountain.jpg" class="d-block w-100" alt="Image Mountain">
                                </div>
                                <div class="carousel-item active">
                                    <img src="~/mazer/dist/assets/images/samples/jump.jpg" class="d-block w-100" alt="Image Jump">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </a>
                        </div>
                    </div>


                    <div class="card-body">
                        <p class="card-text">
                            @item.Title
                        </p>
                        <p class="card-text">
                            @item.Content
                        </p>
                    </div>

                    <div class="card-footer d-flex justify-content-between ">
                        <div class="buttons">

                            <a href="#" class="btn btn-outline-primary">
                                <i class="fa-solid fa-thumbs-up"></i> Like
                            </a>
                            <a href="#" class="btn btn-outline-primary">
                                <i class="fa-solid fa-thumbs-down"></i> Dis
                            </a>
                            <a href="#" class="btn btn-outline-primary">
                                <i class="fa-solid fa-bookmark"></i> Bookmark
                            </a>
                            <a href="#" class="btn btn-outline-primary">
                                <i class="fa-solid fa-share-nodes"></i> Share
                            </a>

                        </div>

                        <div class="d-flex flex-column">
                            <div class="fs-6"> <small>23 KAS 2024</small></div>
                            <div class="fs-6"> <small> <a href="#">by Mustafa</a></small></div>
                            @* <div class="fs-6"> <small>Data</small></div> *@
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>

}



