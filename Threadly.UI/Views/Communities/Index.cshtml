@model List<CommunityVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="section">
    <div class="row">
        <div class="col-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    
                        <a href="/Communities/Create" class="btn btn-primary">
                        <i class="fa-regular fa-plus"></i> Topluluk Oluştur
                    </a>

                </div>
            </div>
        </div>
    </div>
</section>



<section id="content-types">
    <div class="row">


        @foreach (var item in Model)
        {

            <div class="col-xl-4 col-md-6 col-sm-12">

                <div class="card">
                <a href="#">
                    <div class="card-content">
                        <div class="d-flex">
                            <img src="@item.ImageUrl.ToFullImageUrl()" class="card-img-top img-fluid p-3 mx-auto" style="width: 50%;height: 50%;" p-3 alt="singleminded">
                            </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">
                                @item.Description
                            </p>
                        </div>
                    </div>
                </a>
                            <button class="btn btn-success">
                                <i class="fa-solid fa-thumbs-up"></i> Takip Et
                            </button>

                </div>

            </div>




        }





    </div>
</section>



